{
  "source": {
    "include": [
      "smart-chat-model",
      "smart-chunks",
      "smart-collections",
      "smart-embed"
    ],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "node_modules"
  },
  "opts": {
    "recurse": true,
    "destination": "./docs/"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  }
}